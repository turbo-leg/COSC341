<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ViewStatistics">

    <!-- MAIN CONTENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:paddingTop="?attr/actionBarSize">

        <!-- Hamburger Button -->
        <ImageButton
            android:id="@+id/hamButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/outline_menu_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Leaderboard Button -->
        <ImageButton
            android:id="@+id/sendLeaderboard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/transparent"
            android:onClick="sendLeaderboard"
            app:srcCompat="@drawable/outline_bar_chart_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/hamButton"
            app:layout_constraintBottom_toBottomOf="@id/hamButton"/>

        <!-- Heading -->
        <TextView
            android:id="@+id/scoreUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/stats"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/hamButton"
            app:layout_constraintEnd_toStartOf="@id/sendLeaderboard"
            app:layout_constraintTop_toTopOf="@id/hamButton"
            app:layout_constraintBottom_toBottomOf="@id/hamButton"/>

        <!-- Divider Line -->
        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/hamButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Listing Stats Heading -->
        <TextView
            android:id="@+id/viewListingStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lato"
            android:text="@string/listingsstat"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

        <TextView
            android:id="@+id/numOfList"
            android:layout_width="221dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/numneedhelp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/viewListingStat"
            app:layout_constraintTop_toBottomOf="@id/viewListingStat" />

        <TextView
            android:id="@+id/numOfList2"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/numOfList"
            app:layout_constraintTop_toTopOf="@+id/numOfList" />

        <TextView
            android:id="@+id/catneedhelp"
            android:layout_width="221dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/catneedhelp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/viewListingStat"
            app:layout_constraintTop_toBottomOf="@id/numOfList" />

        <TextView
            android:id="@+id/catneedhelp2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/numOfList"
            app:layout_constraintTop_toTopOf="@+id/catneedhelp" />

        <!-- Review Stats -->
        <TextView
            android:id="@+id/viewReviewStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lato"
            android:text="@string/reviewsstat"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/catneedhelp" />

        <TextView
            android:id="@+id/numOfReview"
            android:layout_width="221dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/numreviews"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/viewReviewStat"
            app:layout_constraintTop_toBottomOf="@id/viewReviewStat" />

        <TextView
            android:id="@+id/numOfReview2"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/numOfReview"
            app:layout_constraintTop_toTopOf="@+id/numOfReview" />

        <TextView
            android:id="@+id/avgReview"
            android:layout_width="221dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:text="@string/avgreviewscore"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/numOfReview"
            app:layout_constraintTop_toBottomOf="@id/numOfReview" />

        <TextView
            android:id="@+id/avgReview2"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/avgReview"
            app:layout_constraintTop_toTopOf="@+id/avgReview" />

        <!-- Helper Stats -->
        <TextView
            android:id="@+id/viewHelperStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lato"
            android:text="@string/helperstat"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avgReview" />

        <TextView
            android:id="@+id/numOfHelp"
            android:layout_width="221dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/numofhelp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/viewHelperStat"
            app:layout_constraintTop_toBottomOf="@id/viewHelperStat" />

        <TextView
            android:id="@+id/numOfHelp2"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/numOfHelp"
            app:layout_constraintTop_toTopOf="@+id/numOfHelp" />

        <TextView
            android:id="@+id/catYouHelp"
            android:layout_width="221dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:text="@string/catmosthelped"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/numOfHelp"
            app:layout_constraintTop_toBottomOf="@id/numOfHelp" />

        <TextView
            android:id="@+id/catYouHelp2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/catYouHelp"
            app:layout_constraintTop_toTopOf="@+id/catYouHelp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- NAVIGATION DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigation_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
